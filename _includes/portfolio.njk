---
layout: base.njk
---

<div class="p-6 md:max-w-3xl md:mx-auto lg:max-w-4xl">
    <article class="prose lg:prose-lg md:max-w-none prose-stone dark:prose-invert prose-img:rounded-lg prose-img:max-w-full shadow-2xl
            p-8 bg-paper-secondary-light dark:bg-paper-secondary-dark rounded-2xl">
        {{ content | safe }}
        <ul>
            {%- for post in collections.posts -%}
                <li>
                    <a href="{{ post.page.url }}">{{ post.data.title }}</a>
                </li>
            {%- endfor -%}
        </ul>
    </article>
</div>